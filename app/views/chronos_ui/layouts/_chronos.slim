- content_for :header_tags do
  = javascript_include_tag 'application', plugin: Chronos::PLUGIN_NAME
  javascript:
    if (this.chronos === null) {
        this.chronos = {};
    }

    this.chronos.TimepickerLocales = {
        timeOnlyTitle: "#{t('chronos.ui.timepicker.title')}",
        timeText: "#{t('chronos.ui.timepicker.time')}",
        hourText: "#{t('chronos.ui.timepicker.hour')}",
        minuteText: "#{t('chronos.ui.timepicker.minute')}",
        currentText: "#{t('chronos.ui.timepicker.now')}",
        closeText: "#{t('chronos.ui.timepicker.close')}",
        pickerTimeFormat: "#{convert_format_identifier t('time.formats.time')}"
    };
  = stylesheet_link_tag 'application', plugin: Chronos::PLUGIN_NAME

- if @query && @query.persisted? && @query.editable_by?(User.current)
  .contextual
    = link_to t(:button_edit), edit_chronos_query_path(@query), class: 'icon icon-edit'
    = link_to t(:button_delete), chronos_query_path(@query), confirm: t(:text_are_you_sure), method: :delete, class: 'icon icon-del'

= yield

= context_menu chronos_ui_context_menu_path
